@model IEnumerable<BTLNHOM14.Models.Category>

@{
    ViewData["Title"] = "Category";
}
<div id="form-sb1">
<h1>Category</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                        <a asp-action="Create" class="btn btn-sm btn-success" style="width:92px !important">
                            <i class="fa-solid fa-plus"></i>
                            New
                        </a>
                    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
             <form asp-action="Delete" asp-route-id="@item.CategoryID">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="AddOrEdit" asp-route-id="@item.CategoryID" class="btn btn-warning">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-info">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure? ,you want to delete the selected record')">
                                    <i class="far fa-trash"> </i>
                                </button>
                            </div>


                        </form>
                        </td>
        </tr>
}
    </tbody>
</table>
</div>